{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "standard",
    "promise",
    "compat",
    "flowtype"
  ],
  "settings": {
    "polyfills": ["fetch"]
  },
  "env": {
    "browser": true,
    "node": true,
    "shared-node-browser": true,
    "es6": true,
    "jest": true,
    "worker": true,
    "serviceworker": true
  },
  "rules": {
    "no-unexpected-multiline": "error",
    "compat/compat": "error"
  }
}
